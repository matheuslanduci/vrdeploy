# Exemplo de arquivo .env.production
# Copie este arquivo para .env.production e ajuste os valores para produção

# Database Configuration - Use uma string de conexão segura para produção
DATABASE_URL="postgresql://user:password@prod-db-host:5432/vrdeploy_prod"

# Authentication Configuration - SEMPRE gere novos secrets para produção
BETTER_AUTH_SECRET="GERE_UM_SECRET_FORTE_AQUI_COM_32_CARACTERES"
BETTER_AUTH_URL="https://sua-api-producao.com"

# S3/MinIO Configuration - Use credenciais de produção
S3_ACCESS_KEY="sua_access_key_producao"
S3_SECRET_KEY="sua_secret_key_producao"
S3_ENDPOINT="https://sua-instancia-minio-producao.com"
S3_BUCKET="vrdeploy-prod"

# Redis Configuration - Use instância de produção
REDIS_URL="redis://redis-prod-host:6379"

# Application Configuration
NODE_ENV="production"
PORT="3000"

# Logging Configuration (opcional)
LOG_LEVEL="info"

# SSL/TLS Configuration (se necessário)
SSL_CERT_PATH="/path/to/cert.pem"
SSL_KEY_PATH="/path/to/key.pem"